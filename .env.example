# ============================================================================
# USMC FITNESS REPORT EVALUATOR - Environment Variables
# ============================================================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# ----------------------------------------------------------------------------
# SUPABASE CONFIGURATION (PostgreSQL Database)
# ----------------------------------------------------------------------------
# Get these from your Supabase project dashboard: https://app.supabase.com
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Storage mode: 'supabase' (recommended) or 'github' (legacy)
STORAGE_MODE=supabase

# ----------------------------------------------------------------------------
# SESSION CONFIGURATION
# ----------------------------------------------------------------------------
# Secret key for session encryption (generate with: openssl rand -hex 32)
SESSION_SECRET=your-random-session-secret-here

# ----------------------------------------------------------------------------
# GITHUB DATA STORAGE (LEGACY - Only needed if STORAGE_MODE=github)
# ----------------------------------------------------------------------------
# Personal Access Token for GitHub Data Repository
# Scopes needed: repo, workflow
FITREP_DATA=your-github-pat-here

# Token for dispatching GitHub Actions workflows
DISPATCH_TOKEN=your-dispatch-token-here

# Data repository (format: owner/repo)
DATA_REPO=SemperAdmin/Fitness-Report-Evaluator-Data

# Main application repository (format: owner/repo)
MAIN_REPO=SemperAdmin/Fitness-Report-Evaluator

# ----------------------------------------------------------------------------
# LOCAL DATA STORAGE (FALLBACK)
# ----------------------------------------------------------------------------
# Override local data directory (optional)
# Default: server/local-data or OS temp directory
# LOCAL_DATA_DIR=/path/to/data

# ----------------------------------------------------------------------------
# CORS CONFIGURATION
# ----------------------------------------------------------------------------
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# ----------------------------------------------------------------------------
# DEVELOPMENT OPTIONS
# ----------------------------------------------------------------------------
# Allow exposing development token in client responses (true/false)
# WARNING: Set to false in production!
ALLOW_DEV_TOKEN=false

# Node environment (development, production, test)
NODE_ENV=production

# Server port
PORT=3000

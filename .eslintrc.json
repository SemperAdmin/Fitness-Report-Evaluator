{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "script"
  },
  "rules": {
    "no-implicit-globals": "error",
    "no-undef": "error",
    "no-unused-vars": ["warn", { "args": "none" }],
    "prefer-const": "warn",
    "no-magic-numbers": [
      "warn",
      { "ignore": [0, 1, -1], "ignoreArrayIndexes": true, "enforceConst": true, "detectObjects": true }
    ]
  }
}
